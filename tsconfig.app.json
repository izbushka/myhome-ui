{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@app/*": ["src/app/*"],
        "@config/*": ["src/app/config/*"],
        "@myComponents/*": ["src/app/components/*"],
        "@myServices/*": ["src/app/services/*"],
        "@myInterfaces/*": ["src/app/interfaces/*"],
        "@myModules/*": ["src/app/modules/*"]
      }
  }
}
